include ../../../node_modules/bemto.pug/bemto
include ../components/_vars
include ../components/_mixin

+base-page
    .main-bg
        .container
            .main#main
                +b.logo
                    +e.A(href="index.html").studio Александра Иртыщева
                +b.main-text
                    +e.H1.title FRONT-END РАЗРАБОТКА НА ПРОФЕССИОНАЛЬНОМ УРОВНЕ
                    +e.P.subtitle Если вы устали тратить время на поиски идеального сайта - хватит это терпеть
                +b.button
                    +e.A(href="#contactAnchor").btn Связаться со мной
    .dark-bg
        .container
            +b.introduce
                +e.P.title Давайте знакомиться
                include ../components/_separator
                +e.P.text Меня зовут Александр. Занимаюсь версткой веб-сайтов разной сложности. Разработка для меня - это постоянное развитие в профессиональном плане и открытие новых возможностей в it-сфере. Благодаря многолетнему опыту мне удалось выяснить, насколько важно клиенту получить высокоэффективный сайт.
            +b.knowledge
                +e.title Знаю, умею, практикую
                .row_flex
                    +b.skills-grid
                        each item in skills
                            +b.skills
                                +e.IMG(src="/img/" + item.imgColor).img._color
                                +e.IMG(src="/img/" + item.imgGray).img._gray
                                +e.P.text=item.text

    .light-bg
        .container
            +b.suggest
                +e.P.title ЧТО Я МОГУ ПРЕДЛОЖИТЬ ВАШЕМУ БИЗНЕСУ?
                include ../components/_separator
                +b.suggest-grid
                    .row_flex
                        each item in suggest
                            +b.suggest-block
                                +e.IMG(src="/img/" + item.img).img
                                +e.P.title=item.title
                                +e.P.text=item.text

    .dark-bg
        .container
            +b.portfolio
                +e.P.title Портфолио
                include ../components/_separator
                +e.P.subtitle Все еще сомневаетесь, делать заказ или нет?
                +e.P.text Решение поможет принять великолепное портфолио, оценить которое вы сможете ниже
                +b.portfolio-grid
                    .row_flex
                        each item in portfolio
                            +b.portfolio-block
                                +e.PICTURE
                                    +e.
                                    +e.IMG(src="/img/" + item.img).img
                +e.P.link-text Больше работ вы можете найти по этой
                    +e.A(href="https://www.behance.net/citrus2904e0b6").link ссылке

    .light-bg
        .container
            +b.more-skills
                +e.P.title Дополнительные навыки
                include ../components/_separator
                +b.more-skills-block
                    .row_flex
                        each item in moreSkills
                            +e.P.text=item.text

    .dark-bg
        .container
            +b.slider-grid
                +b.slider
                    +e.title Обо мне говорят отзывы
                    include ../components/_separator
                    +b.swiper-container
                        +b.swiper-wrapper
                            each item in sliderBlock
                                +b.swiper-slide
                                    +e.P.text=item.text
                                    .author-block
                                        +e.HR.author-hr
                                        +e.P.author=item.name
                    +b.pagination-block
                        +b.swiper-button-prev-unique
                        +b.swiper-button-next-unique
    .light-bg#contactAnchor
        .container
            +b.communication
                +e.title как со мной связаться?
                include ../components/_separator
                +e.subtitle Желаете получить эффективный сайт уже сейчас?
                +e.text От Вас лишь достаточно заполнить простую форму

            +b.FORM(action="#").request
                +b.request-block
                    +e.IMG(src="/img/user.svg").img
                    +e.INPUT(type="text" placeholder="Укажите ваше имя" name="name" required  id="name").area
                +b.request-block
                    +e.IMG(src="/img/mail.svg").img
                    +e.INPUT(type="email" placeholder="Укажите ваш e-mal адрес" name="email" required id="email").area
                +b.request-block
                    +e.IMG(src="/img/phone.svg").img
                    +e.INPUT(name="phone" type="tel" required  id="phone").area
                +e.BUTTON(type="submit").btn Оставить заявку

            +b.contacts
                each item in contact
                    +b.contact-block
                        +e.IMG(src='/img/'+ item.img).img
                        if item.href
                            +e.A(href=''+item.link).link=item.text
                        else
                            +e.P.text=item.text